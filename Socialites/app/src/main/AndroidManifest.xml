<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.adityakumarsharma.socialites">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.camera2" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/FullScreen">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Main2Activity" />
        <activity android:name=".facebook" />
        <activity android:name=".mail" />
        <activity android:name=".messenger" />
        <activity android:name=".twitter" />
        <activity android:name=".youtube" />
        <activity android:name=".github" />
        <activity android:name=".linkedin" />
        <activity android:name=".mess" />
        <activity android:name=".yahoo"></activity>
    </application>

</manifest>